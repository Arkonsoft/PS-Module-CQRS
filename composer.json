{
    "name": "arkonsoft/ps-module-cqrs",
    "description": "Custom CQRS for PrestaShop module",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "phpstan": "phpstan analyse",
        "phpstan-baseline": "phpstan analyse --generate-baseline"
    },
    "autoload-dev": {
        "psr-4": {
            "Arkonsoft\\PsModule\\CQRS\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Arkonsoft",
            "email": "info@arkonsoft.pl"
        }
    ],
    "autoload": {
        "psr-4": {
            "Arkonsoft\\PsModule\\CQRS\\": ""
        }
    }
}